num=int(input("Enter odd number for printing a correct diamond"))

space=num//2    #7 divide by 2 willl give you 3

for i in range(1,num+1,2):

    print(" "*space,end="")
    print("*"*i)
    space=space-1


space=1
for i in range(num-2,0,-2):
    print(" "*space,end="")
    print("*"*i)
    space=space+1
